// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  username     String         @unique
  email        String         @unique
  password     String
  posts        Post[]
  UserInterest UserInterest[]
  comments     Comment[]
  likes        Like[]
  friends   User[]   @relation("UserFriends", references: [id], through: Friend)
  friendOf  User[]   @relation("UserFriends", references: [id], through: Friend)
}

model Post {
  id       Int       @id @default(autoincrement())
  title    String
  content  String
  author   User      @relation(fields: [authorId], references: [id])
  authorId Int
  comments Comment[]
  likes    Like[]
}

model CenterOfInterest {
  id    Int            @id @default(autoincrement())
  name  String
  users UserInterest[]
}

model UserInterest {
  id                 Int              @id @default(autoincrement())
  userId             Int
  centerOfInterestId Int
  user               User             @relation(fields: [userId], references: [id])
  centerOfInterest   CenterOfInterest @relation(fields: [centerOfInterestId], references: [id])

  @@unique([userId, centerOfInterestId])
}

model Comment {
  id     Int    @id @default(autoincrement())
  userId Int
  postId Int
  body   String
  user   User   @relation(fields: [userId], references: [id])
  post   Post   @relation(fields: [postId], references: [id])
}

model Like {
  id     Int  @id @default(autoincrement())
  userId Int
  postId Int
  user   User @relation(fields: [userId], references: [id])
  post   Post @relation(fields: [postId], references: [id])
}

model Friend {
  id       Int    @id @default(autoincrement())
  userId   Int
  friendId Int
  user     User   @relation(fields: [userId], references: [id])
  friend   User   @relation(fields: [friendId], references: [id])

  @@unique([userId, friendId])
}